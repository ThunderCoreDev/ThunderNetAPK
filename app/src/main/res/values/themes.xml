<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ====== TEMA BASE DE LA APLICACIÓN ====== -->
    <style name="Theme.ThunderNetWeb" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores BattleNet -->
        <item name="colorPrimary">@color/battlenet_dark_blue</item>
        <item name="colorPrimaryVariant">@color/battlenet_medium_blue</item>
        <item name="colorSecondary">@color/battlenet_electric_blue</item>
        <item name="colorSecondaryVariant">@color/battlenet_electric_blue_light</item>
        <item name="colorOnPrimary">@color/battlenet_text_primary</item>
        <item name="colorOnSecondary">@color/battlenet_dark_blue</item>
        
        <!-- Para PopupMenu -->
        <item name="popupMenuStyle">@style/BattleNetPopupMenu</item>
        <item name="android:popupMenuStyle">@style/BattleNetPopupMenu</item>
        
        <!-- Para diálogos -->
        <item name="alertDialogTheme">@style/BattleNetAlertDialog</item>
        <item name="materialAlertDialogTheme">@style/BattleNetAlertDialog</item>
        
        <!-- Para EditText -->
        <item name="editTextStyle">@style/BattleNetEditText</item>
        
        <!-- Para botones -->
        <item name="materialButtonStyle">@style/BattleNetButton</item>
        
        <!-- Para la barra de estado -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/battlenet_dark_blue</item>
        <item name="android:navigationBarColor" tools:targetApi="o">@color/battlenet_dark_blue</item>
        
        <!-- Para la barra de navegación -->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        
        <!-- Configuraciones adicionales -->
        <item name="android:windowBackground">@color/battlenet_dark_blue</item>
        <item name="android:colorBackground">@color/battlenet_dark_blue</item>
    </style>

    <!-- ====== TEMAS SIN BARRA DE ACCIÓN ====== -->
    <style name="Theme.ThunderNetWeb.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>
    
    <style name="Theme.ThunderNetWeb.FullScreen" parent="Theme.ThunderNetWeb.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- ====== TEMA PARA SPLASH SCREEN ====== -->
    <style name="Theme.ThunderNetWeb.Splash" parent="Theme.AppCompat.NoActionBar">
        <!-- Fondo personalizado para splash -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/battlenet_dark_blue</item>
        <item name="android:navigationBarColor">@color/battlenet_dark_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>

    <!-- ====== TEMA PARA LOGIN ACTIVITY ====== -->
    <style name="Theme.ThunderNetWeb.Login" parent="Theme.ThunderNetWeb.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/battlenet_dark_blue</item>
        <item name="android:navigationBarColor">@color/battlenet_dark_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <!-- Fondo específico para login si quieres -->
        <item name="android:windowBackground">@color/battlenet_dark_blue</item>
    </style>

    <!-- ====== TEMAS COMPATIBILIDAD (para el manifest original) ====== -->
    <style name="Theme.ThunderNetAdmin" parent="Theme.ThunderNetWeb">
        <!-- Mismo tema que ThunderNetWeb, solo cambia el nombre -->
    </style>
    
    <style name="Theme.ThunderNetAdmin.Splash" parent="Theme.ThunderNetWeb.Splash" />
    <style name="Theme.ThunderNetAdmin.Login" parent="Theme.ThunderNetWeb.Login" />
    <style name="Theme.ThunderNetAdmin.NoActionBar" parent="Theme.ThunderNetWeb.NoActionBar" />

    <!-- ====== TEMAS OVERLAY ====== -->
    <style name="Theme.ThunderNetWeb.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.ThunderNetWeb.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- ====== ESTILOS PERSONALIZADOS PARA COMPONENTES ====== -->
    <style name="BattleNetPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/battlenet_card</item>
        <item name="android:textColor">@color/battlenet_text_primary</item>
    </style>
    
    <style name="BattleNetAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@color/battlenet_card</item>
        <item name="android:textColorPrimary">@color/battlenet_text_primary</item>
        <item name="android:textColor">@color/battlenet_text_primary</item>
        <item name="colorBackgroundFloating">@color/battlenet_card</item>
        <item name="colorPrimary">@color/battlenet_electric_blue</item>
        <item name="colorOnPrimary">@color/battlenet_text_primary</item>
    </style>
    
    <style name="BattleNetEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/battlenet_border</item>
        <item name="android:textColorHint">@color/battlenet_text_muted</item>
        <item name="android:textColor">@color/battlenet_text_primary</item>
        <item name="hintTextColor">@color/battlenet_text_muted</item>
        <item name="boxStrokeErrorColor">@color/danger</item>
    </style>
    
    <style name="BattleNetButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/battlenet_electric_blue</item>
        <item name="android:textColor">@color/battlenet_text_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- ====== ESTILO PARA DIALOGOS PERSONALIZADOS ====== -->
    <style name="BattleNetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/dialog_background</item>
        <item name="colorPrimary">@color/battlenet_electric_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/battlenet_text_primary</item>
        <item name="android:textColor">@color/battlenet_text_primary</item>
    </style>
    
        <!-- Overlay faltante -->
    <style name="ThemeOverlay.MaterialComponents.Tooltip" parent="ThemeOverlay.MaterialComponents">
        <item name="android:colorBackground">@color/battlenet_card</item>
        <item name="android:textColor">@color/battlenet_text_primary</item>
    </style>
    </style>
</resources>