<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilos especÃ­ficos para elementos popup/menu -->
    
    <style name="PopupMenu.ThunderNet.Item" parent="Widget.AppCompat.TextView.PopupMenu">
        <item name="android:textColor">@color/battlenet_text_primary</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">@drawable/popup_item_background</item>
    </style>
    
    <style name="PopupWindow.ThunderNet" parent="android:Widget.PopupWindow">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:elevation">8dp</item>
    </style>
    
    <!-- Tooltip styles -->
    <style name="Tooltip.ThunderNet" parent="ThemeOverlay.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/battlenet_text_primary</item>
        <item name="android:colorBackground">@color/battlenet_card</item>
        <item name="cornerRadius">4dp</item>
    </style>
</resources>