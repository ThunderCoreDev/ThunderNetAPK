<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Appearances -->
    <style name="TextAppearance.ThunderNet.Title.Large">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/battlenet_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="TextAppearance.ThunderNet.Title.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/battlenet_text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.ThunderNet.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/battlenet_text_secondary</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="TextAppearance.ThunderNet.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/battlenet_text_muted</item>
    </style>

    <!-- Bases faltantes -->
    <style name="TextAppearance.ThunderNet" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/battlenet_text_primary</item>
    </style>

    <style name="TextAppearance.ThunderNet.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/battlenet_text_primary</item>
    </style>

    <!-- Widget Styles -->
    <style name="Widget.ThunderNet.Card">
        <item name="android:background">@color/battlenet_card</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <style name="Widget.ThunderNet.Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/battlenet_border</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <style name="Widget.ThunderNet" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/battlenet_text_primary</item>
    </style>

    <style name="Widget.AppCompat.TextView.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/battlenet_text_primary</item>
    </style>
</resources>