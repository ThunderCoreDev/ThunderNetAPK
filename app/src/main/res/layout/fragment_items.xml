<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText android:id="@+id/etCharacter" android:hint="Personaje"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etItemId" android:hint="ID de ítem"
        android:inputType="number"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/etCount" android:hint="Cantidad"
        android:inputType="number"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btnGiveItem" android:text="Dar ítem"
        android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>