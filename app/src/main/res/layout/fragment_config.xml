<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:padding="16dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:text="Base de datos" android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <EditText android:id="@+id/etDbHost" android:hint="Host"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etDbPort" android:hint="Puerto" android:inputType="number"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etDbUser" android:hint="Usuario"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etDbPass" android:hint="Contrase침a" android:inputType="textPassword"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnSaveDb" android:text="Guardar DB"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView android:text="SOAP / Emulador" android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <EditText android:id="@+id/etSoapHost" android:hint="SOAP host (worldserver)"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etSoapPort" android:hint="SOAP port (ej: 7878)" android:inputType="number"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etSoapUser" android:hint="SOAP user"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etSoapPass" android:hint="SOAP pass" android:inputType="textPassword"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <EditText android:id="@+id/etEmulator" android:hint="Emulador (TrinityCore)"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etGameVersion" android:hint="Versi칩n del juego (WotLK)"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnSaveSoap" android:text="Guardar SOAP/Emulador"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <TextView android:text="Cuenta administrativa" android:textStyle="bold"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <EditText android:id="@+id/etAdminUser" android:hint="Usuario admin"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <EditText android:id="@+id/etAdminPass" android:hint="Nueva contrase침a" android:inputType="textPassword"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <Button android:id="@+id/btnChangeAdminPass" android:text="Cambiar contrase침a"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>
</ScrollView>