<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splashLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/battlenet_dark_blue">
    
    <!-- Logo WoW -->
    <ImageView
        android:id="@+id/wowLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_wow_logo"
        android:layout_marginBottom="32dp" />
    
    <!-- CÃ­rculo de carga -->
    <ImageView
        android:id="@+id/loadingCircle"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_loading_circle"
        android:layout_marginBottom="24dp" />
    
    <!-- Texto de carga -->
    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectando..."
        android:textColor="@color/battlenet_text_primary"
        android:textSize="16sp"
        android:textStyle="bold" />
    
</LinearLayout>